# Beef Sync - Configurações de Ambiente

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/beef_sync"

# JWT Secret
JWT_SECRET="your-super-secret-jwt-key-here"

# WhatsApp API Configuration
WHATSAPP_PROVIDER="twilio"  # twilio, whatsapp_business, chatapi

# Twilio Configuration
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886"

# WhatsApp Business API Configuration
WHATSAPP_ACCESS_TOKEN="your_whatsapp_business_access_token"
WHATSAPP_PHONE_NUMBER_ID="your_phone_number_id"

# Chat-API Configuration
CHATAPI_TOKEN="your_chatapi_token"
CHATAPI_INSTANCE_ID="your_chatapi_instance_id"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Beef Sync"

# Email Configuration (opcional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Webhook Configuration
WEBHOOK_URL="https://your-domain.com/api/webhooks/whatsapp"
WEBHOOK_VERIFY_TOKEN="your-webhook-verify-token"

# Market API Keys (quando integrar APIs reais)
CEPEA_API_KEY="your_cepea_api_key"
B3_API_KEY="your_b3_api_key"

# Analytics (opcional)
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"

# File Upload (opcional)
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"